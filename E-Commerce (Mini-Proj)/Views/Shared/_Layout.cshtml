    <!-- ##### Main Content Wrapper Start ##### -->
    <div class="main-content-wrapper d-flex clearfix">

        <!-- Mobile Nav (max width 767px)-->
        <!-- Header Area Start -->
        <header class="header-area clearfix">
            <div class="nav-close"><i class="fa fa-close" aria-hidden="true"></i></div>
            <div class="logo">
                <a href="index.html"><img src="/Content/img/core-img/logo.png" alt=""></a>
            </div>
            <nav class="amado-nav">
                <ul>
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Shop", "Shop", "Home")</li>
                    <li>@Html.ActionLink("Product", "PD", "Home")</li>
                    @if (Session["isLogin"] != null && (bool)Session["isLogin"])
                    {
                        <li>@Html.ActionLink("Cart", "Cart", "Home")</li>
                        <li>@Html.ActionLink("Checkout", "Checkout", "Home")</li>
                    }
                </ul>
            </nav>

            <!-- Button Group -->
            <div class="amado-btn-group mt-30 mb-100">
                @if (Session["isLogin"] != null && (bool)Session["isLogin"])
                {
                    <!-- Profile Button -->
                    <a href="@Url.Action("Profile", "Home")" class="btn amado-btn mb-15">Profile</a>
                    <!-- Logout Button -->
                    <a href="@Url.Action("Logout", "Home")" class="btn amado-btn active">Logout</a>
                }
                else
                {
                    <!-- Trigger Login Modal -->
                    <a href="@Url.Action("Login", "Home")" class="btn amado-btn mb-15">Log In</a>
                    <!-- Trigger Register Modal -->
                    <a href="#" class="btn amado-btn active" data-toggle="modal" data-target="#registerModal">Register</a>
                }
            </div>

            <div class="cart-fav-search mb-100">
                @if (Session["isLogin"] != null && (bool)Session["isLogin"])
                {
                    <a href="@Url.Action("Cart", "Home")" class="cart-nav"><img src="/Content/img/core-img/cart.png" alt=""> Cart <span>(0)</span></a>
                    <a href="@Url.Action("Favorites", "Home")" class="fav-nav"><img src="/Content/img/core-img/favorites.png" alt=""> Favourite</a>
                }
                <a href="#" class="search-nav"><img src="/Content/img/core-img/search.png" alt=""> Search</a>
            </div>

            <div class="social-info d-flex justify-content-between">
                <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            </div>
        </header>
        <!-- Header Area End -->

        @RenderBody()

        <!-- ##### Footer Area Start ##### -->
