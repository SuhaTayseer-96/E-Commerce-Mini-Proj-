
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title  -->
    <title>Cart</title>

    <!-- Favicon  -->
    <link rel="icon" href=@Url.Content("/Content/img/core-img/favicon.ico")>

    <!-- Core Style CSS -->
    <link rel="stylesheet" href=@Url.Content("/Content/css/core-style.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/style.css")>
</head>
<body>
    <!-- ##### jQuery (Necessary for All JavaScript Plugins) ##### -->
    <script src=@Url.Content("/Content/js/jquery/jquery-2.2.4.min.js")></script>
    <!-- Popper js -->
    <script src=@Url.Content("/Content/js/popper.min.js")></script>
    <!-- Bootstrap js -->
    <script src=@Url.Content("/Content/js/bootstrap.min.js")></script>
    <!-- Plugins js -->
    <script src=@Url.Content("/Content/js/plugins.js")></script>
    <!-- Active js -->
    <script src=@Url.Content("/Content/js/active.js")></script>

    <div class="cart-table-area section-padding-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <div class="cart-title mt-50">
                        <h2>Shopping Cart</h2>
                    </div>

                    <div class="cart-table clearfix">
                        <table class="table table-responsive">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="cart_product_img">
                                        <a href="#"><img src="/Content/img/product-img/pocket.jpg" alt="Product"></a>
                                    </td>
                                    <td class="cart_product_desc">
                                        <h5>DJI Osmo Pocket Gimbal</h5>
                                    </td>
                                    <td class="price">
                                        <span id="product-price-1" data-price="130">$130</span>
                                    </td>
                                    <td class="qty">
                                        <div class="qty-btn d-flex">
                                            <p>Qty</p>
                                            <div class="quantity">
                                                <span class="qty-minus" onclick="updateQuantity('qty1', 'product-price-1', -1);"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                                <input type="number" class="qty-text" id="qty1" step="1" min="1" max="300" name="quantity" value="1" onchange="calculateTotal('product-price-1');">
                                                <span class="qty-plus" onclick="updateQuantity('qty1', 'product-price-1', 1);"><i class="fa fa-plus" aria-hidden="true"></i></span>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="cart_product_img">
                                        <a href="#"><img src="/Content/img/product-img/Canon.jpg" alt="Product"></a>
                                    </td>
                                    <td class="cart_product_desc">
                                        <h5>Canon EOS R7 with RF-S 18-150mm</h5>
                                    </td>
                                    <td class="price">
                                        <span id="product-price-2" data-price="1000">$1000</span>
                                    </td>
                                    <td class="qty">
                                        <div class="qty-btn d-flex">
                                            <p>Qty</p>
                                            <div class="quantity">
                                                <span class="qty-minus" onclick="updateQuantity('qty2', 'product-price-2', -1);"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                                <input type="number" class="qty-text" id="qty2" step="1" min="1" max="300" name="quantity" value="1" onchange="calculateTotal('product-price-2');">
                                                <span class="qty-plus" onclick="updateQuantity('qty2', 'product-price-2', 1);"><i class="fa fa-plus" aria-hidden="true"></i></span>
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="cart-summary">
                        <h5>Cart Total</h5>
                        <ul class="summary-table">
                            <li><span>subtotal:</span> <span id="cart-subtotal">$1130.00</span></li>
                            <li><span>delivery:</span> <span>Free</span></li>
                            <li><span>total:</span> <span id="cart-total">$1130.00</span></li>
                        </ul>
                        <div class="cart-btn mt-100">
                            <a href="checkout.html" class="btn amado-btn w-100">Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- ##### Main Content Wrapper End ##### -->
    <!-- ##### Newsletter Area Start ##### -->
    <section class="newsletter-area section-padding-100-0">
        <div class="container">
            <div class="row align-items-center">
                <!-- Newsletter Text -->
                <div class="col-12 col-lg-6 col-xl-7">
                    <div class="newsletter-text mb-100">
                        <h2>Subscribe for a <span>25% Discount</span></h2>
                        <p>Nulla ac convallis lorem, eget euismod nisl. Donec in libero sit amet mi vulputate consectetur. Donec auctor interdum purus, ac finibus massa bibendum nec.</p>
                    </div>
                </div>
                <!-- Newsletter Form -->
                <div class="col-12 col-lg-6 col-xl-5">
                    <div class="newsletter-form mb-100">
                        <form action="#" method="post">
                            <input type="email" name="email" class="nl-email" placeholder="Your E-mail">
                            <input type="submit" value="Subscribe">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Newsletter Area End ##### -->

    <script>
        function updateQuantity(qtyId, priceId, change) {
            var qtyElement = document.getElementById(qtyId);
            var quantity = parseInt(qtyElement.value);
            var newQuantity = quantity + change;

            if (newQuantity >= 1) {
                qtyElement.value = newQuantity;
                calculateTotal(priceId);
            }
        }

        function calculateTotal(priceId) {
            var priceElement = document.getElementById(priceId);
            var pricePerItem = parseFloat(priceElement.getAttribute("data-price"));
            var qtyElement = document.getElementById(priceId.replace('product-price-', 'qty'));
            var quantity = parseInt(qtyElement.value);

            var totalPrice = pricePerItem * quantity;
            priceElement.innerHTML = "$" + totalPrice.toFixed(2);

            updateCartTotal();
        }

        function updateCartTotal() {
            var subtotal = 0;

            // Loop through each product's price element and sum up the totals
            document.querySelectorAll('[id^="product-price-"]').forEach(function (element) {
                subtotal += parseFloat(element.innerHTML.replace('$', ''));
            });

            // Update the cart total and subtotal
            document.getElementById("cart-subtotal").innerHTML = "$" + subtotal.toFixed(2);
            document.getElementById("cart-total").innerHTML = "$" + subtotal.toFixed(2);
        }


    </script>
</body>
